{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "StudentReadMaterials",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:ListBucket"
      ],
      "Resource": [
        "arn:aws:s3:::educloud-materials/materials/*",
        "arn:aws:s3:::educloud-materials"
      ]
    },
    {
      "Sid": "StudentUploadAssignments",
      "Effect": "Allow",
      "Action": [
        "s3:PutObject",
        "s3:GetObject"
      ],
      "Resource": "arn:aws:s3:::educloud-materials/assignments/*"
    },
    {
      "Sid": "CloudFrontRead",
      "Effect": "Allow",
      "Action": [
        "cloudfront:CreateInvalidation",
        "cloudfront:GetDistribution"
      ],
      "Resource": "*"
    }
  ]
}
