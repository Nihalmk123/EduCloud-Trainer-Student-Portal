{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "SupportCloudWatchFull",
      "Effect": "Allow",
      "Action": [
        "logs:*",
        "cloudwatch:*",
        "cloudwatch-insights:*"
      ],
      "Resource": "*"
    },
    {
      "Sid": "SupportBackupS3",
      "Effect": "Allow",
      "Action": [
        "s3:PutObject",
        "s3:GetObject",
        "s3:ListBucket",
        "s3:DeleteObject"
      ],
      "Resource": [
        "arn:aws:s3:::educloud-materials/backups/*",
        "arn:aws:s3:::educloud-materials-backup"
      ]
    },
    {
      "Sid": "EC2Describe",
      "Effect": "Allow",
      "Action": [
        "ec2:DescribeInstances",
        "ec2:DescribeVolumes"
      ],
      "Resource": "*"
    }
  ]
}
